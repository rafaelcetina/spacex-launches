---
interface Props {
  id: string;
  img: string;
  success: boolean;
  flightNumber: number;
  details: string | null;
}

import { Image } from "astro:assets";

const { success, flightNumber, details, id, img } = Astro.props;

const launchStatus = success ? "Success" : "Failure";
---

<a
  href={`/launch/${id}`}
  class="rounded-lg border shadow-md bg-gray-800 border-gray-700 hover:scale-105 hover:bg-gray-700 hover:border-gray-500 transition flex flex-col"
>
  <picture class="flex justify-center p-4" transition:name={`launch-${id}`}>
    <Image
      width="250"
      height="250"
      class="mb-5 rounded-lg"
      src={img}
      alt={`Patch for launch ${id}`}
    />
  </picture>

  <header class="p-4 flex-grow">
    <span
      transition:name={`launch-status-${id}`}
      class:list={[
        "text-xs font-semibold mr-2 px-2.5 py-0.5 rounded",
        {
          "bg-green-300 text-green-900": success,
          "bg-red-400 text-black": !success,
        },
      ]}>{launchStatus}</span
    >
    <h2 class="my-2 text-2xl font-bold tracking-tight text-white">
      Flight #{flightNumber}
    </h2>
    <p class="mb-4 font-light text-gray-400 dark:text-white">
      {
        details !== null && details?.length > 100
          ? `${details.substring(0, 100)}...`
          : details
      }
    </p>
  </header>
</a>
